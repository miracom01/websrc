<div id="modEpModal" name="modEpModal" class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true">
  <div class="modal-dialog">

    <!-- Modal content-->
    <form class="form-horizontal" method="post" id="modApform" name ="modApform">
      <div class="modal-content">
         <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
           <h3 class="modal-title" id="gridSystemModalLabel">AP/EP 정보 수정</h3>
         </div>
         <div class="modal-body">
           <div class="container-fluid">
             <div class="row">
               <div class="col-sm-9">
                 <div class="form-group" style="display:none;">
                   <input type="text" id="txtModEPKind" name="txtModEPKind">
                   <input type="text" id="txtModEqNO" name="txtModEqNO">
                 </div>
                 <div class="btn-group" role="group">
                  <button type="button" class="btn btn-default" id="btn_modEpModal_AP">AP</button>
                  <button type="button" class="btn btn-default" id="btn_modEpModal_EP">EP</button>
                </div>
                <div class="dropdown" id="divModEPKind" name="divModEPKind">
                    <label for="ddlmodeEPKind">기기종류: </label><br />
                    <button class="btn btn-default dropdown-toggle" type="button" id="ddlModEPKind" name="ddlModEPKind" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      선택 <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="ddlModEPKind">
                      <% for(var i=0;i<applianceInfo.length;i++){
                          var appl = applianceInfo[i];
                       %>
                       <li><a role="menuitem" href="#" onclick="changeModEPKind('<%= appl.DESCRIPTION %>','<%= appl.CODE %>');"><%= appl.DESCRIPTION %></a></li>
                      <% } %>
                    </ul>
                  </div>
                 <div style="display:none;">
                   <label for="txt_modEpModal_ApEPName">기기명:</label>
                   <input type="text" class="form-control" id="txt_modEpModal_ApEPName" name="txt_modEpModal_ApEPName">
                 </div>
                 <div>
                   <label for="txt_ModEpModal_EQSN">기기 S/N:</label>
                   <input type="text" class="form-control" id="txt_modEpModal_EQSN" name="txt_modEpModal_EQSN" disabled="true">
                 </div>
                 <div  id="divModAPSn" name="divModAPSn">
                   <label for="txtInputApSN">연결할 AP S/N</label>
                   <div class="dropdown" id="divEPKind" name="divEPKind">
                   <input type="text" class="form-control dropdown-toggle" id="txt_modEpModal_ApSN" name="txt_modEpModal_ApSN" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                   <ul class="dropdown-menu" aria-labelledby="ddlEPKind">
                     <% for(var i=0;i<myAPSNInfo.length;i++){
                         var myAP = myAPSNInfo[i];
                      %>
                      <li><a role="menuitem" href="#" onclick="selectedModMyApSN('<%= myAP.SERIAL_NO %>');"><%= myAP.SERIAL_NO %></a></li>
                     <% } %>
                   </ul>
                   </div>

                 </div>
               </div>
             </div>
           </div>
         </div>
         <div class="modal-footer">
             <button type="button" class="btn btn-default" data-dismiss="modal" id="btn_modEpModal_Close">닫기</button>
             <button type="button" class="btn btn-default" id="btn_modEpModal_submit" data-loading-text="Loading..." >수정</button>
             <button type="button" class="btn btn-default" id="btn_delEpModal_submit" data-loading-text="Loading..." >삭제</button>
         </div>
       </div>
   </form>
  </div>
</div>
