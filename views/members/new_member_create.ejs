        var str;
        for(var i=0; i < rinfo.length; i++) {
          str += "<option value='"+rinfo[i].CODE+"'>"+rinfo[i].DESCRIPTION+"("+rinfo[i].CODE_NAME+")</option>";
          //alert(rinfo[i].CODE+" "+rinfo[i].CODE_NAME);
        }
