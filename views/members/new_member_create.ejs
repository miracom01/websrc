<!DOCTYPE html>
<html lang="en">
<% include ../common.ejs %>
<script>
$(document).ready(function(){
  $.ajax({
    url: "/members/getRegion2ByAjax",
    data: {region1: $('#region1 option:selected').val()},
    success: function(result){
      //alert(JSON.stringify(result));
      var rinfo = result.reg2Info;
      var str;
